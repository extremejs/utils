{
  "name": "@extremejs/utils",
  "version": "1.0.0-beta.16",
  "description": "ExtremeJS Utilities",
  "homepage": "https://extremejs.github.io/utils",
  "author": "Ardalan Amini <ardalanamini22@gmail.com> (https://ardalanamini.com/)",
  "license": "MIT",
  "repository": "github:extremejs/utils",
  "bugs": {
    "url": "https://github.com/extremejs/utils/issues"
  },
  "keywords": [
    "utilities",
    "utils",
    "util",
    "typescript",
    "ts",
    "javascript",
    "js",
    "node.js",
    "node",
    "browser",
    "import",
    "require"
  ],
  "scripts": {
    "document": "typedoc",
    "build": "npm run build:esm && npm run build:cjs",
    "build:watch": "nodemon",
    "build:esm": "tsc",
    "build:esm:watch": "npm run build:esm -- --watch",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:cjs:watch": "npm run build:cjs -- --watch",
    "lint": "eslint src __tests__ scripts",
    "lint:fix": "npm run lint -- --fix",
    "test": "node --no-compilation-cache --expose-gc node_modules/jest/bin/jest --logHeapUsage",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "npm run test:coverage -- --ci --verbose --no-cache",
    "prepack": "npm run build:pre && npm run build && npm run build:post",
    "build:post": "ts-node -P tsconfig.cjs.json scripts/post-build.ts",
    "build:pre": "ts-node -P tsconfig.cjs.json scripts/pre-build.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "jsnext:main": "build/esm/index.js",
  "types": "build/cjs/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./build/esm/index.d.ts",
        "default": "./build/esm/index.js"
      },
      "import": {
        "types": "./build/esm/index.d.ts",
        "default": "./build/esm/index.js"
      },
      "default": {
        "types": "./build/cjs/index.d.ts",
        "default": "./build/cjs/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.24.0",
    "eslint-config-noir": "^1.3.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.13",
    "typescript": "^4.8.2"
  }
}
